# =============================================================================
# Environment Variables Template
# Copy this file to .env and fill in the values
# =============================================================================

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=fullstack

# Full database URL (for backend)
DATABASE_URL=postgresql://postgres:your-secure-password-here@localhost:5432/fullstack?schema=public

# -----------------------------------------------------------------------------
# Backend
# -----------------------------------------------------------------------------
NODE_ENV=production
BACKEND_PORT=3001

# JWT Configuration
JWT_SECRET=your-secure-jwt-secret-here-min-32-chars
JWT_EXPIRES_IN=7d

# CORS - allowed origins (comma-separated for multiple)
CORS_ORIGIN=http://localhost:3000

# -----------------------------------------------------------------------------
# Frontend (Web)
# -----------------------------------------------------------------------------
WEB_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3001

# -----------------------------------------------------------------------------
# Studio Backend (Only needed when using --profile studio)
# -----------------------------------------------------------------------------
STUDIO_DB=studio
STUDIO_BACKEND_PORT=3003
STUDIO_CORS_ORIGIN=http://localhost:3002

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Email (Resend)
RESEND_API_KEY=re_...
EMAIL_FROM=noreply@yourdomain.com

# -----------------------------------------------------------------------------
# Studio Frontend (Only needed when using --profile studio)
# -----------------------------------------------------------------------------
STUDIO_WEB_PORT=3002
STUDIO_API_URL=http://localhost:3003/api
STUDIO_APP_NAME=Starter Studio

# -----------------------------------------------------------------------------
# Docker Compose Overrides (Optional)
# -----------------------------------------------------------------------------
# Uncomment to customize ports
# BACKEND_PORT=3001
# WEB_PORT=3000
# STUDIO_BACKEND_PORT=3003
# STUDIO_WEB_PORT=3002
