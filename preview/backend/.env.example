# Database (same PostgreSQL instance as studio)
DATABASE_URL=postgresql://postgres:localpass@localhost:5433/studio_dev

# Server
PORT=3003
NODE_ENV=development

# CORS (studio frontend + preview frontend)
CORS_ORIGIN=http://localhost:3002,http://localhost:3004

# JWT (must match core backend secret for token compatibility)
JWT_SECRET=preview-jwt-secret-min-32-characters-long

# Studio API (for session resolution)
STUDIO_API_URL=http://localhost:3001/api

# Preview limits
MAX_PREVIEW_SCHEMAS=50
MAX_SESSIONS_PER_IP=5
PREVIEW_TTL_HOURS=4
PRISMA_CONNECTION_LIMIT=2

# Internal API secret (shared with studio backend, min 64 chars)
INTERNAL_API_SECRET=dev-internal-secret-that-is-at-least-64-characters-long-for-hmac-signing
