{
  "name": "Learning Management System",
  "version": "1.0.0",
  "description": "Complete LMS with courses, lessons, quizzes, certificates, enrollment tracking, and instructor dashboard",
  "tier": "premium",
  "price": "149",
  "category": "education",
  "platforms": "backend,web,mobile",
  "dependencies": {
    "backend": {
      "pdfkit": "^0.15.0",
      "qrcode": "^1.5.3",
      "slugify": "^1.6.6"
    },
    "web": {
      "react-player": "^2.14.0"
    },
    "mobile": {
      "http": "^1.2.0",
      "url_launcher": "^6.2.0"
    }
  },
  "env": {
    "LMS_CERTIFICATE_ISSUER": "",
    "LMS_CERTIFICATE_VERIFY_URL": "",
    "VIDEO_STORAGE_URL": ""
  },
  "prismaModels": [
    "Category",
    "CourseCategory",
    "Course",
    "Section",
    "Lesson",
    "Enrollment",
    "Progress",
    "Quiz",
    "Question",
    "QuizAttempt",
    "Certificate",
    "Review"
  ],
  "routes": {
    "backend": {
      "prefix": "/api/v1/lms",
      "files": [
        "routes/course.routes.ts",
        "routes/lesson.routes.ts",
        "routes/enrollment.routes.ts",
        "routes/quiz.routes.ts",
        "routes/certificate.routes.ts",
        "routes/instructor.routes.ts"
      ]
    }
  },
  "postInstall": [
    "Run Prisma migration to add LMS models",
    "Configure video storage URL (YouTube, Vimeo, or S3)",
    "Set certificate issuer name and verification URL",
    "Seed initial course categories",
    "Configure file upload for course thumbnails and lesson materials"
  ],
  "documentation": "https://docs.fullstack-starter.dev/modules/lms"
}
