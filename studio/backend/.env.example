# Database
DATABASE_URL="postgresql://user:password@localhost:5432/xitolaunch?schema=public"

# Server
PORT=3001
NODE_ENV=development

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Cors
CORS_ORIGIN=http://localhost:3002

# Preview
PREVIEW_APP_URL=http://localhost:3000

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SUCCESS_URL=http://localhost:3002/checkout/success?session_id={CHECKOUT_SESSION_ID}
STRIPE_CANCEL_URL=http://localhost:3002/checkout?cancelled=true

# Email (Resend)
RESEND_API_KEY=re_...
EMAIL_FROM=noreply@xitolaunch.com

# Storage (S3/R2)
S3_ENDPOINT=
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=auto

# Admin
# Generate hash: node -e "require('bcryptjs').hash('yourpassword', 10).then(console.log)"
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=$2b$10$REPLACE_WITH_BCRYPT_HASH
